{
    "name": "Livox ROS Driver",
	"image": "airtonomy.azurecr.io/flight-controller/flight-controller-base:dev",
    // Set the workspace in VS code to match the one in the devcontainer
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/src,type=bind",
    "remoteUser": "ros",
    "runArgs": [
        "--network=host",
        //"--publish 9999:9999/tcp",
        "--cap-add=SYS_PTRACE",
        "--security-opt=seccomp:unconfined",
        "--security-opt=apparmor:unconfined",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
        "--volume=${localEnv:HOME}/.ssh:/home/ros/.ssh"
    ],
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}"
    },
    "settings": {
        "terminal.integrated.profiles.linux": {
            "bash": {
                "path": "bash"
            }
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.eol": "\n"
    },
    "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode.cpptools",
        "redhat.vscode-yaml",
        "smilerobotics.urdf",
        "twxs.cmake",
        "yzhang.markdown-all-in-one",
        "ms-iot.vscode-ros",
        "eamodio.gitlens",
        "ms-vscode.cpptools-extension-pack",
        "mhutchie.git-graph",
        "bierner.markdown-mermaid"
    ],
    "features": {},
    // avoid dubious ownership https://www.kenmuse.com/blog/avoiding-dubious-ownership-in-dev-containers/
    "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    "postCreateCommand": "sudo apt update && rosdep update && rosdep install --from-paths src/livox_ros_driver --ignore-src -r -y"

}
